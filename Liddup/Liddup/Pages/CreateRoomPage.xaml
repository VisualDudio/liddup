<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Liddup.CreateRoomPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <!--This page is for a user to host/create a master playlist. He/She should be able to name it too. UI-wise this
            page should contain an entry and a button, and should navigate the user to the MasterPlaylistPage.-->
            <Entry Placeholder="Room Name"/>
            <Label x:Name="RoomNameLabel"/>
            <Button x:Name="CreateRoomButton" Text="Create" Clicked="CreateRoomButton_OnClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>